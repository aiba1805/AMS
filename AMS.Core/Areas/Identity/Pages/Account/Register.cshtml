@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

	<!-- container -->
	<div class="container">

		<ol class="breadcrumb">
			<li><a asp-controller="Home" asp-action="Index">Home</a></li>
			<li class="active">Registration</li>
		</ol>

		<div class="row">

			<!-- Article main content -->
			<article class="col-xs-12 maincontent">
				<header class="page-header">
					<h1 class="page-title">Registration</h1>
				</header>

				<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
					<div class="panel panel-default">
						<div class="panel-body">
							<h3 class="thin text-center">Register a new account</h3>
							<p class="text-center text-muted">If you already have an account just <a href="/Account/Login">Login</a></p>
							<hr>

							<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
								<div class="top-margin">
									<label asp-for="Input.Email">Email Address 
										<span asp-validation-for="Input.Email" class="text-danger">*</span></label>
									<input asp-for="Input.Email" class="form-control" />
								</div>

								<div class="row top-margin">
									<div class="col-sm-6">
										<label asp-for="Input.Password">Password <span asp-validation-for="Input.Password" 
										                                               class="text-danger">*</span></label>
										<input asp-for="Input.Password" class="form-control" />
									</div>
									<div class="col-sm-6">
										<label asp-for="Input.ConfirmPassword">Confirm Password <span asp-validation-for="Input.ConfirmPassword" class="text-danger">*</span></label>
										<input asp-for="Input.ConfirmPassword" class="form-control" />
									</div>
								</div>

								<hr>

								<div class="row">
									<div class="col-lg-8">
										<label class="checkbox">
											<input type="checkbox">
											I've read the <a href="">Terms and Conditions</a>
										</label>
									</div>
									<div class="col-lg-4 text-right">
										<button class="btn btn-action" type="submit">Register</button>
									</div>
								</div>
							</form>
						</div>
					</div>

				</div>

			</article>
			<!-- /Article -->

		</div>
	</div>	<!-- /container -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
